#!/bin/bash

log=~/data/logs/index.json

arg="$@"

if [ "$1" == "-h" ]; then
  echo "log [-h] [text]"
  echo "to log to $log"
  exit
fi

if [ -z "$arg" ]; then
  tail -10 $log
else
  timestamp=$(timestamp)
  echo "{\"timestamp\": \"$timestamp\", \"log\": \"$arg\" }" >> $log
  # echo "$arg" | map json log | map augment timestamp | post $log
  tail -1 $log
fi

#!/bin/bash

# returns paths matching a resource name given the cwd

resource="$1"
type=$(type -t $resource)

if [ "$type" == 'file' ]; then    # executable
  /usr/bin/which "$resource"
  exit
fi

/usr/bin/find . -name $resource -exec echo {} \;
  # use -exec to force flushing at every match
  # avoided locate because it does not return immediate results

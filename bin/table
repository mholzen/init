#!/usr/bin/env coffee
highland = require 'highland'

fit = (item, width)->
  item[0..width] + Array(Math.max(Math.floor(width)-item.length, 0)).join ' '

width = process.stdout.columns ? 80

highland(process.stdin)
.split()
.filter (x) -> x.length > 0
.map (line) ->
  items = line.split /[,\t]+/
  items.map (item)-> fit(item, width / items.length)
    .join ''
.each (result)->
  process.stdout.write result + '\n'

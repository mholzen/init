#!/bin/bash

dir="$1"
if [ -z "$dir" ]; then
  dir="."
fi

if [ -d "$dir" ]; then
  cd "$dir"
else
  echo "$dir is not a directory"
  echo "Usage: lr1 [<dir>]"
  exit 1
fi

item=$(lr "$dir" | tail -1)

if [ -z "$item" ]; then
  echo "Error: no files found in directory $dir"
  exit 1
fi

realpath "$item"

